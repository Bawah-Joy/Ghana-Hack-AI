{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/assets/*": ["./assets/*"],
       "@/context/*": ["./context/*"]
    },
    "typeRoots": ["./node_modules/@types", "./.expo/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    ".expo/types/**/*.d.ts",
    "expo-env.d.ts"
  ]
}